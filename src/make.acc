all: acc

VIDEO    = -DVIDEO
CXX      =  pgc++
FLAGS    = -fast -acc -ta=tesla,cc35 -Minfo=accel -Minline -O3 $(VIDEO)
CFLAGS   = $(FLAGS)
CXXFLAGS = $(FLAGS)
LDFLAGS  = 

PROGRAM_NAME=mandelbulb

OBJS =  main.o print.o timing.o savebmp.o getparams.o 3d.o getcolor.o distance_est.o mandelbulb_dist_est.o raymarching.o renderer.o init3D.o

acc: $(OBJS)
	$(CXX) -o $@ $? $(CXXFLAGS) $(LDFLAGS)

clean:
	rm -f *.o mandelbulb *~